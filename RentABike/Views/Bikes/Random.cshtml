@model RentABike.ViewModel.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Bikes.Name</h2>


@if (Model.Customers.Count == 0)
{
    <p> No Customers Rented This Bike</p>
}
else
{
    <ul>
        @foreach (var Customer in Model.Customers)
        {
            <li>
                @Customer.Name

            </li>
        }
    </ul>
}

