@model IEnumerable<RentABike.Models.Bike>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bikes</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Model
            </th>
            <th>
                CC
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bike in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(@bike.Name, "Details", "Bikes", new { BikeId = bike.Id }, null)
                </td>
                <td>
                    @bike.Model.ToShortDateString()
                    @*.ToString("{0:MMM-yyyy}")*@
                </td>
                <td>
                    @bike.CubicCapacity.CC
                </td>
            </tr>
            
        }
    </tbody>
</table>